@model PiattoViewModel

<h1>Inserisci i dati del nuovo piatto</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" readonly/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione"></label>
        <input asp-for="Descrizione" class="form-control" readonly/>
        <span asp-validation-for="Descrizione" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tipologia"></label>
        <input asp-for="Tipologia" class="form-control" readonly/>
        <span asp-validation-for="Tipologia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MenuId"></label>
        <input asp-for="MenuId" class="form-control" readonly/>
        <span asp-validation-for="MenuId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prezzo"></label>
        <input asp-for="Prezzo" class="form-control" readonly/>
        <span asp-validation-for="Prezzo" class="text-danger"></span>
    </div>
    
<input type="submit" value="Conferma eliminazione" class="btn btn-danger" />
<a class="btn btn-primary" asp-controller="Piatti" asp-action="Index">Indietro</a>
</form>
